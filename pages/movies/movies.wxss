/* pages/movies/movies.wxss */
page {
    background: #F2F2F2;
}

.search-box {
    width: 100%;
    height: 80rpx;
}

.search-box {
    width: 100%;
    height: 80rpx;
    position: relative;
    justify-content: space-between;
    box-sizing: border-box;
    position: relative;
    display: flex;
    align-items: center;
}

.search-box>.search-icon {
    position: absolute;
    top: 26rpx;
    left: 20rpx;
}
.cancel{
    position: absolute;
    width: 47rpx;
    height: 47rpx;
    top: 20rpx;
    right: 20rpx;
}
.search-box>.search-placeholder {
    /* placeholder的样式 */
    color: #D1D1D1;
    font-size: 30rpx;
}

.search-box>.search-input {
    margin-left: 108rpx;
}

.movies-list-box {
    width: 100%;
    padding: 48rpx 28rpx 22rpx 28rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    margin-top: 30rpx;
    box-sizing: border-box;
}

.title-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 28rpx;
}

.title-box>.title-one {
    color: #70797A;
    font-size: 30rpx;
}

.title-box>.title-two {
    color: #5153A5;
    font-size: 30rpx;
}

.movies-list {
    display: flex;
    overflow-x: scroll;
    width: 100%;
}

.movies-list>.moview-li {
    min-width:200rpx;
    max-width: 200rpx;
    height: 370rpx;
    display: flex;
    flex-direction: column;
    margin-right: 45rpx;
}

.moview-li>.movies-img {
    width: 100%;
}

.moview-li>.movies-name {
    color: #666666;
    font-size: 32rpx;
    margin: 20rpx 0 20rpx 0;
    width: 100%;
    height: 79rpx;
}
