/* pages/movies/movies.wxss */
page{
    background: #F2F2F2;
  }
.search-box{
    width: 100%;
    height: 80rpx;
}
.search-box{
    width: 100%;
    height: 80rpx;
    position: relative;
    justify-content: space-between;
    box-sizing: border-box;
    position: relative;
    display: flex;
    align-items: center;
}
.search-box>.search-icon{
    position: absolute;
    top: 26rpx;
    left: 20rpx;
}
.search-box>.search-placeholder{/* placeholder的样式 */
    color: #D1D1D1;
    font-size: 30rpx;
}
.search-box>.search-input{
    margin-left: 108rpx;
}
.movies-list-box{
    width: 100%;
    height: 492rpx;
    padding: 48rpx 28rpx 22rpx 28rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    margin-top: 30rpx;
    box-sizing: border-box;
}
.title-box{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}
.title-box>a:nth-of-type(1){
    color: #70797A;
    font-size: 30rpx;
}
.title-box>a:nth-of-type(2){
    color: #5153A5;
    font-size: 30rpx;
}
.movies-list{
    border: 1px solid green;
    display: flex;
    justify-content: space-between;
}
.movies-list>.moview-li{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border: 1px solid green;
}

.rating-box{
    border: 1px solid blueviolet;
}
