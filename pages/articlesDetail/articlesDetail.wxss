/* pages/articlesDetail/articlesDetail.wxss */
.main-img{
    width: 100vw;
}
.main-img image{
    width: 100%;
}
.news-msg{
    width: 100vw;
    box-sizing: border-box;
    padding: 16rpx 22rpx 16rpx 22rpx;
}
.news-msg .articles-date{
    font-size: 28rpx;
    color: #818181;
}
.news-msg .articles-title{
    font-size: 34rpx;
    color: #333333;
    margin: 24rpx 0 17rpx 0;
    letter-spacing: 2px;
    font-weight: bold;
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    display: block;
}
.news-msg .articles-gray{
    font-size: 28rpx;
    color: #818181;
}
.news-msg .articles-author{
    font-size: 30rpx;
    color: #818181;
    font-weight: bold;
    margin:0 20rpx 0 20rpx;
}
.articles-user-msg .articles-gray{
    margin-right:20rpx;
}
.hr{
    width: 100%;
    height: 1px;
    background: #E5E5E5;
    margin: 70rpx 0 80rpx 0;
}
.news-msg .articles-user-msg{
    display: flex;
    align-items: center;
    box-sizing: border-box;
}
.news-msg .user-head-portrait{
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
}